                            id="password" 
                            class="input"
                            class="input {{ hasErrorFor('password') ? 'is-danger' : '' }}"
                            value="{{ old('password', '') }}"
                            >
                    </div>

                    {{ elIf('<span class="help is-danger">$self</span>', getErrorFor('password'), hasErrorFor('password')) }}
                    
                </div>

                <div class="field">

                    <label for="password_confirmation">Confirm Password</label>
                    <div class="control">
                            <input 
